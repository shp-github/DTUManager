{
  "name": "electron-vue-vite",
  "version": "28.1.0",
  "main": "dist-electron/main/index.js",
  "description": "Really simple Electron + Vue + Vite boilerplate.",
  "author": "",
  "license": "MIT",
  "private": true,
  "keywords": [
    "electron",
    "rollup",
    "vite",
    "vue3",
    "vue"
  ],
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
    }
  },
  "type": "module",
  "scripts": {
    "install": "yarn install",
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build && tsc",
    "build:win": "npm run build && electron-builder --win --x64",
    "prebuild": "tsc"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue": "^3.4.21",
    "vue-tsc": "^2.0.6"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.11.7",
    "express": "^5.1.0",
    "vue-router": "^4.6.3"
  },
  "build": {
    "appId": "com.yourcompany.dtu",
    "productName": "DTU Manager",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "dist-electron/main/**",
      "dist-electron/preload/**",
      "dist/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "public/favicon.ico",
      "certificateFile": "certs/cert.pfx",
      "certificatePassword": "2948299576"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/favicon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public"
    }
  }
}
